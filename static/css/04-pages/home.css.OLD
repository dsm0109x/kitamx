/* Home Page Styles - Visual Rich Deep Teal */
body {
    background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
}

/* ===== NAVBAR GLASSMORPHISM (Overridden by apple-liquid-glass.css) ===== */
/* Kept for reference, actual styles in apple-liquid-glass.css */

/* Mobile menu tambi√©n con blur */
@media (max-width: 991.98px) {
    .navbar-collapse {
        background: var(--glass-ultra-thick);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        margin-top: 1rem;
        padding: 1.5rem;
        border-radius: var(--radius-md);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .navbar-nav {
        gap: 0.5rem;
    }

    .navbar-nav .nav-item {
        padding: 0.25rem 0;
    }

    .navbar-nav .nav-link {
        padding: 0.75rem 1rem;
        border-radius: var(--radius-sm);
        transition: background 0.2s ease;
    }

    .navbar-nav .nav-link:hover {
        background: rgba(99, 102, 241, 0.08);
    }

    .navbar-nav .btn {
        width: 100%;
        justify-content: center;
    }
}

.text-primary-kita {
    color: var(--color-primary);
}

/* Sections - Minimal Spacing */
.section-clean {
    padding: var(--section-padding-desktop) 0;
    position: relative;
}

.section-hero {
    background: #fafbfc;
    padding: var(--section-padding-desktop) 0;
}

.section-timeline {
    /* Background now handled by .section-parallax-mexican */
    color: #0f172a;
    padding: var(--space-12, 96px) 0;
}

.section-features,
.section-value-pyramid {
    background: #ffffff;
    padding: var(--section-padding-desktop) 0;
}

.section-pricing {
    background: var(--color-primary);
    padding: var(--section-padding-desktop) 0;
}

.section-pricing h2,
.section-pricing .lead {
    color: white;
}

.section-faq {
    background: #ffffff;
    padding: var(--section-padding-desktop) 0;
}

.section-cta {
    /* Background now handled by .section-parallax-mexican-dark */
    color: #0f172a;
    padding: var(--space-12, 96px) 0;
}

/* Hero */
.home-hero-clean {
    min-height: 90vh;
    display: flex;
    align-items: center;
    background: linear-gradient(180deg, #fafafa 0%, #ffffff 50%, #fafafa 100%);
    padding: var(--space-16, 128px) 0 var(--space-12, 96px) 0;
}

.hero-badge {
    background: transparent;
    color: var(--color-primary);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    border: 2px solid var(--color-primary);
    font-size: 0.85rem;
    font-weight: 600;
    display: inline-block;
    letter-spacing: 0.5px;
}

.hero-heading {
    line-height: 1.3;
}

.hero-lead {
    font-size: 1.35rem;
    color: var(--text-primary);
    font-weight: 500;
}

.hero-logo-large {
    height: 140px;
    width: auto;
    display: block;
    margin: 2rem 0 2rem 0;
}

.btn-xl {
    padding: 1.25rem 2.5rem !important;
    font-size: 1.1rem !important;
    border-radius: 14px !important;
}

.hero-caption {
    font-size: 0.85rem;
}

.trust-badge-hero {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #4b5563;
    padding: 0.25rem 0;
}

.trust-badge-hero .iconoir {
    color: var(--color-accent);
    font-size: 1.2rem;
}

.hero-screenshot {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
}

/* Timeline */
.timeline-horizontal {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto 3rem;
}

.timeline-step {
    flex: 1;
    text-align: center;
    cursor: pointer;
    padding: 1.5rem 1rem;
    border-radius: var(--radius-lg);
    background: transparent;
    border: none;
    border-bottom: 3px solid transparent;
    color: inherit;
    transition: all var(--transition-fast) ease;
}

.timeline-step:hover {
    border-bottom-color: rgba(99, 102, 241, 0.3);
}

.timeline-step:focus-visible {
    outline: 2px solid #6366f1;
    outline-offset: 4px;
}

.timeline-step.active {
    background: transparent;
    border-bottom-color: #6366f1;
}

.timeline-number {
    width: 56px;
    height: 56px;
    background: white;
    border: 2px solid var(--color-gray-200);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: #6b7280;
    margin: 0 auto 0.75rem;
    transition: all var(--transition-base);
}

.timeline-step.active .timeline-number {
    background: white;
    border-color: #6366f1;
    border-width: 3px;
    color: #6366f1;
}

.timeline-number.pulse {
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.3); }
    50% { box-shadow: 0 0 0 12px rgba(99, 102, 241, 0); }
}

.timeline-step h5 {
    color: #374151;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.timeline-step.active h5 {
    color: #0f172a;
}

.timeline-step p {
    color: #9ca3af;
    font-size: 0.85rem;
    margin-bottom: 0;
}

.timeline-step.active p {
    color: #6b7280;
}

.timeline-subtitle {
    font-size: 1.1rem;
    color: #374151 !important;
}

.timeline-hint {
    font-size: 0.95rem;
    color: #4b5563 !important;
}

.timeline-arrow {
    font-size: 1.5rem;
    color: #9ca3af;
    align-self: center;
}

.timeline-detail {
    display: none;
    margin-top: 2.5rem;
    padding: 2rem 0;
    background: transparent;
    border-top: 2px solid var(--color-gray-200);
}

.timeline-detail.active {
    display: block;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.timeline-detail h4 {
    color: #0f172a !important;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
}

.timeline-detail h5,
.timeline-detail h6 {
    color: var(--color-primary) !important;
    font-weight: 600;
}

.timeline-detail p,
.timeline-detail ul,
.timeline-detail li {
    color: #4b5563 !important;
}

.timeline-detail strong {
    color: #0f172a !important;
}

.timeline-detail code {
    background: #fafafa;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #6366f1;
    color: #0f172a;
    font-weight: 600;
    font-size: 0.95rem;
    display: inline-block;
}

.whatsapp-box {
    background: rgba(255, 255, 255, 0.15);
    border-left: 3px solid var(--glass-thin);
    padding: 1rem;
    border-radius: var(--radius-sm);
}

/* Timeline Enriched Examples */
.timeline-example-enriched {
    padding: 1.5rem 0;
}

.example-field {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 0.75rem 1rem;
    margin-bottom: 0.75rem;
}

.example-field label {
    color: #6b7280 !important;
    font-weight: 500;
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
    display: block;
}

.example-value {
    color: #0f172a !important;
    font-weight: 600;
    font-size: 1rem;
}

.timeline-result-card,
.invoice-result-card {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #10b981;
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    margin-top: 1rem;
}

.timeline-result-card strong,
.invoice-result-card strong {
    color: #059669 !important;
    font-size: 1rem;
}

.whatsapp-preview {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #25d366;
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.whatsapp-header {
    background: #fafafa;
    border-bottom: 1px solid var(--color-gray-200);
    padding: 0.75rem 1rem;
    font-size: 0.85rem;
    font-weight: 600;
    color: #374151;
}

.whatsapp-message {
    background: white;
    padding: 1rem;
    color: #0f172a !important;
    line-height: 1.5;
    font-size: 0.9rem;
}

.timeline-checklist {
    list-style: none;
    padding: 0;
    margin: 0;
}

.timeline-checklist li {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 0.75rem 1rem;
    margin-bottom: 0.5rem;
    color: #0f172a !important;
    font-size: 0.9rem;
}

.payment-methods-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
}

.payment-method-item {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-top: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 1.25rem 1rem;
    text-align: center;
    color: var(--color-gray-900);
    transition: border-color 0.2s ease;
}

.payment-method-item:hover {
    border-top-color: #4f46e5;
}

.payment-method-item strong {
    display: block;
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
    color: #0f172a !important;
    font-weight: 600;
}

.payment-method-item p {
    color: #6b7280 !important;
    font-size: 0.85rem;
}

.payment-method-item .iconoir {
    color: #6366f1;
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

.invoice-flow-steps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.flow-step {
    display: flex;
    align-items: start;
    gap: 1rem;
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 1rem;
    margin-bottom: 0.75rem;
}

.step-number-mini {
    background: white;
    border: 2px solid #6366f1;
    color: #6366f1;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.85rem;
    flex-shrink: 0;
}

.step-content strong {
    color: #0f172a !important;
    font-weight: 600;
    font-size: 0.95rem;
    display: block;
    margin-bottom: 0.25rem;
}

.step-content p,
.step-content .small {
    color: #6b7280 !important;
    font-size: 0.85rem;
}

.step-content {
    flex: 1;
}

.step-content strong {
    display: block;
    margin-bottom: 0.25rem;
}

.step-content code {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    color: white;
    font-size: 0.85rem;
}

.invoice-files {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.file-badge {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 0.6rem 1rem;
    color: #0f172a !important;
    font-size: 0.85rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.file-badge .iconoir {
    color: #6366f1;
    font-size: 1rem;
}

@keyframes fadeInScale {
    from { opacity: 0; transform: translateY(-20px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
}

/* Features Grid 4x4 */
.features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.25rem;
    max-width: 1200px;
    margin: 0 auto;
}

.feature-card {
    text-align: center;
    padding: 1.25rem 0.75rem;
    border-radius: 10px;
    background: transparent;
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
}

.feature-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.feature-card .iconoir {
    font-size: 6rem !important;
    color: #2d2d2d !important;
    line-height: 1 !important;
    margin-bottom: 0.75rem;
    display: block;
    transition: transform 0.3s ease;
}

.feature-card:hover .iconoir {
    transform: scale(1.05);
}

.feature-card h6 {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
}

.feature-card p {
    font-size: 0.85rem;
    color: #6b7280;
    line-height: 1.3;
    margin-bottom: 0;
}

/* FAQ Categorized */
.faq-container {
    max-width: 900px;
    margin: 0 auto;
}

.faq-category {
    background: transparent;
    border-radius: var(--radius-lg);
    padding: 0;
    margin-bottom: 3rem;
}

.faq-category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding-bottom: 1rem;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-gray-200);
}

.faq-category-header h4 {
    color: #0f172a;
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0;
}

.faq-category-header .iconoir {
    color: #6366f1;
    font-size: 1.25rem;
}

.faq-item {
    padding: 0;
    margin-bottom: -1px;
    background: white;
    border: 1px solid var(--color-gray-200);
    border-left: 3px solid transparent;
    transition: border-color 0.2s ease;
}

.faq-item:hover {
    border-left-color: #6366f1;
}

.faq-item.active {
    border-left-color: #6366f1;
}

.faq-item-highlighted {
    border-left-color: #f59e0b;
    background: #fffbeb;
}

.faq-item-highlighted .badge {
    background: #f59e0b;
    color: white;
    font-size: 0.7rem;
    padding: 0.25rem 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.faq-question {
    width: 100%;
    text-align: left;
    background: none;
    border: none;
    padding: 1.25rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all var(--transition-fast) ease;
}

.faq-question:hover {
    color: #6366f1;
}

.faq-question:focus-visible {
    outline: 2px solid #6366f1;
    outline-offset: -2px;
}

.faq-question .iconoir {
    transition: transform 0.3s ease;
    color: #9ca3af;
    font-size: 1.25rem;
    flex-shrink: 0;
}

.faq-question.active .iconoir {
    transform: rotate(180deg);
    color: #6366f1;
}

.faq-answer {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    padding: 0 1.5rem;
    color: #4b5563;
    line-height: 1.7;
    font-size: 0.95rem;
    transition:
        max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
        opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
        padding 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.faq-answer.active {
    max-height: 800px;
    opacity: 1;
    padding: 0 1.5rem 1.5rem 1.5rem;
}

.faq-answer strong {
    color: #0f172a;
    font-weight: 600;
}

/* Responsive */
@media (max-width: 991px) {
    .home-hero-clean {
        min-height: auto;
    }

    .section-hero,
    .section-timeline,
    .section-features,
    .section-value-pyramid,
    .section-pricing,
    .section-faq,
    .section-cta,
    .section-clean,
    .section-technical-trust {
        padding: var(--section-padding-mobile) 0;
    }

    .timeline-horizontal {
        flex-direction: column;
        gap: 1rem;
    }

    .timeline-arrow {
        display: none;
    }

    .features-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .payment-methods-grid {
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }
}

@media (max-width: 576px) {
    .features-grid {
        grid-template-columns: 1fr;
    }

    .value-hero-card {
        padding: 2rem 1.5rem;
    }

    .value-hero-icon {
        width: 90px;
        height: 90px;
    }

    .value-hero-icon .iconoir {
        font-size: 3rem !important;
    }

    .value-stat {
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
    }

    .feature-pill {
        font-size: 0.75rem;
        padding: 0.4rem 0.75rem;
    }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
    .timeline-detail,
    .faq-answer {
        animation: none !important;
        transition: none !important;
    }

    .timeline-step,
    .feature-card,
    .hero-screenshot {
        transition: none !important;
        transform: none !important;
    }

    .timeline-step:hover,
    .feature-card:hover,
    .hero-screenshot:hover {
        transform: none !important;
    }

    .timeline-number.pulse {
        animation: none !important;
    }
}

/* ===== NEW SECTIONS STYLES ===== */

/* Navbar Sticky */
.navbar.sticky-top {
    z-index: 1030;
}

.navbar-nav .nav-link {
    font-weight: 500;
    color: #4b5563;
    transition: color 0.2s;
}

.navbar-nav .nav-link:hover {
    color: var(--color-accent);
}

/* ScrollSpy Active State */
.navbar-nav .nav-link.active {
    color: var(--color-accent);
    font-weight: 600;
    position: relative;
}

.navbar-nav .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 2px;
    background: var(--color-accent);
    border-radius: 2px;
}

/* Urgency Badge */
.urgency-badge {
    background-color: #fef3c7 !important;
    border: 1px solid #f59e0b;
    color: #92400e !important;
    font-size: 0.9rem;
    box-shadow: 0 2px 8px rgba(245, 158, 11, 0.2);
}

.urgency-badge .iconoir {
    color: #f59e0b;
}

/* Technical Trust Section */
.section-technical-trust {
    padding: var(--section-padding-desktop);
    background: var(--bg-subtle);
}

.tech-trust-item {
    padding: 1.5rem 1rem;
    border-radius: var(--radius-md);
    background: white;
    height: 100%;
}

.tech-trust-item h6 {
    color: var(--text-primary);
    font-size: 0.95rem;
}


.partner-logos {
    padding: 2rem 0;
}

.partner-logo-container {
    min-width: 100px;
    text-align: center;
}

.partner-logo-img {
    filter: grayscale(100%);
    opacity: 0.7;
}

.partner-logo-placeholder {
    display: inline-block;
    padding: 1rem 1.5rem;
    background: var(--bg-elevated);
    border-radius: var(--radius-sm);
    color: var(--text-tertiary);
    font-size: 0.9rem;
}

.security-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
}

.security-item {
    text-align: center;
    padding: 1rem;
}

.security-item .iconoir {
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
}

/* Video Demo Section - REMOVED (no fake placeholders) */

/* Value Pyramid */
.section-value-pyramid {
    padding: var(--section-padding-desktop);
    background: #ffffff;
}

/* NIVEL 1: Hero Feature Card */
.value-hero-card {
    background: linear-gradient(135deg, var(--color-teal-50) 0%, #ffffff 100%);
    border-radius: var(--radius-xl);
    padding: 3rem;
    position: relative;
}

.value-hero-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--gradient-accent);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
}

.value-hero-icon {
    width: 120px;
    height: 120px;
    background: var(--gradient-accent);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.value-hero-icon .iconoir {
    font-size: 4rem !important;
    color: white !important;
    stroke-width: 1.5px !important;
}

.value-tag {
    display: inline-flex;
    align-items: center;
    background: white;
    color: var(--text-primary);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.85rem;
    font-weight: 500;
}

.value-tag .iconoir {
    color: var(--color-accent);
    font-size: 1.1rem;
}

/* NIVEL 2: Core Value Cards */
.value-core-card {
    background: var(--bg-subtle);
    border-radius: var(--radius-lg);
    padding: 2rem;
    height: 100%;
}

.value-core-icon {
    width: 70px;
    height: 70px;
    background: var(--bg-subtle);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
}

.value-core-icon .iconoir {
    font-size: 2.5rem !important;
    color: var(--color-primary) !important;
    stroke-width: 2px !important;
}

.value-stat {
    background: var(--bg-subtle);
    border-left: 4px solid var(--color-accent);
    padding: 1rem 1.5rem;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: baseline;
    gap: 1rem;
}

.value-stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
}

.value-stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* NIVEL 3: Secondary Features Pills */
.secondary-features-bar {
    background: var(--bg-subtle);
    border-radius: var(--radius-lg);
    padding: 2rem;
    margin-top: 2rem;
}

.feature-pill {
    display: inline-flex;
    align-items: center;
    background: white;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.feature-pill .iconoir {
    font-size: 1rem;
    color: var(--color-accent);
}

/* Pricing Comparison */
.pricing-card {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    overflow: visible;
    height: 100%;
}

.pricing-card .card-body {
    padding: 2rem !important;
}

.pricing-card-competitor {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-left: 3px solid #94a3b8;
}

.pricing-card-competitor h3 {
    color: white !important;
}

.pricing-card-competitor p,
.pricing-card-competitor li {
    color: rgba(255, 255, 255, 0.9) !important;
}

.pricing-card-competitor .text-muted {
    color: var(--glass-regular) !important;
}

.pricing-card-competitor strong {
    color: white !important;
}

.pricing-card-competitor .text-danger {
    color: #fca5a5 !important;
}

.pricing-card-kita {
    position: relative;
    border: 2px solid #6366f1;
}

.pricing-badge {
    position: absolute;
    top: -12px;
    left: 1.5rem;
    background: #6366f1;
    color: white;
    padding: 0.4rem 1rem;
    border-radius: var(--radius-lg);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.pricing-features li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    color: var(--color-primary);
}

.pricing-features .iconoir {
    flex-shrink: 0;
    font-size: 1.25rem;
    margin-top: 0.125rem;
}

/* Asegurar texto oscuro en card Kita */
.pricing-card-kita h3,
.pricing-card-kita p,
.pricing-card-kita li,
.pricing-card-kita .text-muted {
    color: var(--color-primary) !important;
}

.pricing-card-kita .small {
    color: #6b7280 !important;
}

.value-card {
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 2px solid #3b82f6;
}

/* CTA Final Steps - minimalista */
.cta-step-card {
    background: white;
    border: 1px solid var(--color-gray-200);
    border-top: 3px solid #6366f1;
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-align: center;
}

.cta-step-number {
    width: 36px;
    height: 36px;
    background: white;
    border: 2px solid #6366f1;
    color: #6366f1;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1rem;
    margin-bottom: 1rem;
}

.cta-step-icon {
    margin: 1rem 0;
}

.cta-step-icon .iconoir {
    font-size: 3rem !important;
    color: #6366f1 !important;
}

.cta-step-card h5 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #0f172a;
}

.cta-step-card p {
    font-size: 0.85rem;
    color: #6b7280;
}

.cta-step-card strong {
    color: #0f172a;
}

.text-white-75 {
    color: rgba(255, 255, 255, 0.75);
}

.cta-button-final {
    background: var(--color-accent) !important;
    color: white !important;
    font-weight: 700;
    font-size: 1.1rem;
}

/* Footer Minimalista */
.footer-minimal {
    background: var(--color-gray-900);
    color: var(--color-gray-400);
    padding: 5rem 0 2rem;
}

.footer-trust-bar {
    padding: 2rem 0;
}

.trust-badges-footer {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
}

.trust-badge-footer {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    color: var(--color-gray-300);
    font-size: 0.85rem;
    font-weight: 500;
}

.trust-badge-footer .iconoir {
    color: var(--color-accent);
}

.footer-divider {
    border-color: var(--color-gray-700);
    opacity: 0.5;
    margin: 3rem 0;
}

.footer-logo {
    filter: brightness(0) invert(1);
    opacity: 0.9;
}

.footer-description {
    color: var(--color-gray-400);
    font-size: 0.9rem;
    line-height: 1.6;
}

.footer-heading {
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
}

.footer-links-minimal {
    padding: 0;
    margin: 0;
}

.footer-links-minimal li {
    margin-bottom: 0.75rem;
}

.footer-links-minimal a {
    color: var(--color-gray-400);
    text-decoration: none;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
}

.footer-links-minimal .iconoir {
    font-size: 1.1rem;
}

.footer-cta-final {
    background: rgba(255, 255, 255, 0.03);
    border-radius: var(--radius-lg);
    padding: 3rem 2rem;
    margin: 3rem 0;
}

.footer-cta-heading {
    color: white;
    font-weight: 600;
}

.footer-cta-subtitle {
    color: var(--color-gray-400);
    font-size: 0.9rem;
}

.footer-bottom {
    padding: 2rem 0 0;
}

.footer-copyright {
    color: var(--color-gray-500);
    font-size: 0.85rem;
}

/* Responsive Adjustments for New Sections */
@media (max-width: 768px) {
    .section-technical-trust {
        padding: var(--section-padding-mobile);
    }

    .tech-trust-item {
        padding: 1.25rem 0.75rem;
    }

    .pricing-card {
        margin-bottom: 2rem;
    }

    .cta-step-card {
        margin-bottom: 2rem;
    }

    .footer-minimal {
        padding: 3rem 0 1.5rem;
    }

    .trust-badges-footer {
        gap: 0.75rem;
    }

    .trust-badge-footer {
        font-size: 0.75rem;
        padding: 0.4rem 0.75rem;
    }

    .footer-cta-final {
        padding: 2rem 1rem;
    }
}
